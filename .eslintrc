{
  "extends": [
    "eslint:recommended"
  ],
  "parser": "babel-eslint",
  "rules": {
    "comma-dangle": [
      "warn",
      "always-multiline"
    ],
    "quotes": [
      "warn",
      "single"
    ],
    "no-multiple-empty-lines": [
      "error",
      {
        "max": 1,
        "maxBOF": 0,
        "maxEOF": 1
      }
    ],
    "semi": [
      "error",
      "never"
    ],
    "no-console": "warn",
    "no-irregular-whitespace": [
      "error",
      {
        "skipComments": true
      }
    ],
    "no-undef": "off",
    "no-unused-vars": "off",
    "no-multi-spaces": "error",
    "array-bracket-spacing": [
      "warn",
      "never"
    ],
    "max-lines": [
      "error",
      {
        "max": 250
      }
    ],
    "max-statements": [
      "error",
      {
        "max": 30
      }
    ],
    "prefer-destructuring": [
      "warn",
      {
        "object": true,
        "array": false
      }
    ],
    "no-await-in-loop": "error",
    "no-return-await": "error",
    "require-await": "error"
  },
  "parserOptions": {
    "ecmaVersion": 8,
    "sourceType": "module",
    "ecmaFeatures": {
      "experimentalObjectRestSpread": true
    }
  }
}
